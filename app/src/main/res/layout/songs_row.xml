<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:padding="5dp"
    android:focusable="true"
    android:background="@color/black">
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/outline_music_note_selected_24"
                android:id="@+id/iv_artwork"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title"
                android:text="Songs title"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                android:paddingRight="50dp"
                android:paddingEnd="50dp"
                android:layout_toRightOf="@+id/iv_artwork"
                android:layout_toEndOf="@+id/iv_artwork"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_artwork"
                android:layout_toEndOf="@+id/iv_artwork"
                android:text="Artist"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:textSize="14sp"
                android:layout_below="@+id/tv_title"
                android:id="@+id/tv_artist"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_duration"
                android:text="00:00"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/iv_play_active"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_duration"
                android:src="@drawable/play_circle_24"
                android:visibility="invisible"/>


        </RelativeLayout>
</RelativeLayout>