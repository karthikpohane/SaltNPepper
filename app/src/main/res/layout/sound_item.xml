<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_record"
            app:backgroundTint="@color/colorPrimary"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_vertical"
            android:padding="6dp"
            android:background="@drawable/round_button_thumbnail"
            app:tint="@color/colorAccent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/sound_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="Sound title mp4"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/sound_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:58"/>

            <TextView
                android:id="@+id/sound_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jul 05, 2015 - 05:24 PM"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>