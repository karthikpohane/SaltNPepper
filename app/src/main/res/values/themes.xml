<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Salt" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:itemTextAppearance">@style/MenuTheme</item>
    </style>

    <style name="Theme.Salt" parent="Base.Theme.Salt" />
    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">@color/forth</item>
        <item name="android:itemTextAppearance">@style/MenuTheme</item>
    </style>

<!--    For Menus-->
    <style name="MenuTheme" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">#000000</item>
    </style>


</resources>